@model quiniela.Models.ParticipantsModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Model.PageTitle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <meta name="description" content="Your description">
    <meta name="keywords" content="Your keywords">
    <meta name="author" content="Your name">
    <link rel="stylesheet" href="/css/bootstrap.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/style.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/preview.css" type="text/css">

    <script type="text/javascript" src="/js/include_script.js"></script>

    <!--[if lt IE 9]>

            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <link href="/css/ie.css" rel="stylesheet" type="text/css">
        <![endif]-->
</head>
<body>
    <!--content wrapper-->
    <div id="wrapper">
        <section>
            <div class="dynamicContent">
                <!--content-->
                <div class="row">
                    <div class="span6">
                        <h2>@Model.UserListTitle</h2>
                        <div class="wrap">
                            <div class="wrap" id="particpants">
                            </div>
                        </div>
                    </div>
                    <div class="span3"></div>
                    <div class="span3">
                        <h2>@Model.Participants</h2>
                        <div class="wrap">
                            <h3 class="margin4">@Model.ParticipantDesc</h3>
                            <p>@Model.ParticipantNode</p>
                        </div>
                        <div class="wrap">
                            <div id="InviteFriends">
                                <h3>@Model.InviteFriend</h3><br />
                                <div class="span3" style="float: right;">
                                    <div class="wrap">
                                        <form id="formInvite">
                                            <input type="hidden" name="formType" value="InviteFriends" />
                                            <div class="success alert alert-success hide"><span>@Model.InvitationSuccessMsg</span></div>
                                            <div class="fail alert alert-error hide"><span>@Model.FormErrMsg</span></div>
                                            <fieldset>
                                                <label class="email">
                                                    <input type="email" value="@Model.FieldEmail">
                                                    <span class="error w1" style="display: none;">@Model.FieldValEmail</span>
                                                    <span class="empty w1" style="display: none;">@Model.FieldRequired</span>
                                                </label>
                                                <br class="clear">
                                                <div class="btns">
                                                    <a href="#" class="btn more_btn1" data-type="submit">@Model.SendMessage</a>
                                                </div>
                                            </fieldset>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
    <script type="text/javascript" src="/js/bootstrap.js"></script>
    <script>
        loadParticipants();
        jQuery('#formInvite').forms({ ownerEmail: '@Model.OwnerEmail' });
        if (_userId == "") {
            $("#InviteFriends").hide();
        }
    </script>
</body>
</html>