@model quiniela.Models.RegModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Model.PageTitle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <meta name="description" content="Your description">
    <meta name="keywords" content="Your keywords">
    <meta name="author" content="Your name">
    <link rel="stylesheet" href="/css/bootstrap.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/style2014.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/preview.css" type="text/css">

    <script type="text/javascript" src="/js/include_script.js"></script>

    <!--[if lt IE 9]>

            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <link href="/css/ie.css" rel="stylesheet" type="text/css">
        <![endif]-->
</head>
<body>
    <!--content wrapper-->
    <div id="wrapper">
        <section>
            <div class="dynamicContent">
                <!--content-->
                <div class="row">
                    <div class="span9">
                        <h2>
                            @Model.InvitationDesc
                        </h2>
                        <div id="InviteFriends">
                            <h3>@Model.InviteFriend</h3><br />
                            <div class="span3">
                                <div class="wrap">
                                    <form id="formInvite">
                                        <input type="hidden" name="formType" value="InviteFriends" />
                                        <div class="success alert alert-success hide"><span>@Model.InvitationSuccessMsg</span></div>
                                        <div class="fail alert alert-error hide"><span>@Model.FormErrMsg</span></div>
                                        <fieldset>
                                            <label class="email">
                                                <input type="email" value="@Model.FieldEmail">
                                                <span class="error w1" style="display: none;">@Model.FieldValEmail</span> <span class="empty w1" style="display: none;">@Model.FieldRequired</span>
                                            </label>
                                            <br class="clear">
                                            <div class="btns">
                                                <a href="#" class="btn more_btn1" data-type="submit">@Model.BtnSendMsg</a>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span3">
                        <h2>@Model.NewUserTitle</h2>
                        <div class="wrap">
                            <form id="formReg">
                                <input type="hidden" name="formType" value="registration" />
                                <div class="success alert alert-success hide"><span>@Model.RegSuccessMsg<strong><br>@Model.RegSuccessMsg1</strong></span></div>
                                <div class="fail alert alert-error hide"><span>@Model.RegFailMsg</span></div>
                                <fieldset>
                                    <label class="name">
                                        <input type="text" value="@Model.FieldName">
                                        <span class="error w1" style="display: none;">@Model.FieldValName</span> <span class="empty w1" style="display: none;">@Model.FieldRequired</span>
                                    </label>
                                    <label class="email">
                                        <input type="email" value="@Model.FieldEmail">
                                        <span class="error w1" style="display: none;">@Model.FieldValEmail</span> <span class="empty w1" style="display: none;">@Model.FieldRequired</span>
                                    </label>
                                    <label class="invitecode">
                                        <input type="text" value="@Model.FieldInvitation">
                                        <span class="error w1" style="display: none;">@Model.FieldValInviteCode</span> <span class="empty w1" style="display: none;">@Model.FieldRequired</span>
                                    </label>
                                    <label class="pin1">
                                        <input type="text" class="pin" onkeyup="maxLengthCheck(this);" onkeydown="maxLengthCheck(this);" maxlength="4" value="@Model.FieldPin">
                                        <span class="error" style="display: none;">@Model.FieldValPin</span> <span class="empty" style="display: none;">@Model.FieldRequired</span>
                                    </label>
                                    <label class="pin2">
                                        <input type="text" class="pin" onkeyup="maxLengthCheck(this);" onkeydown="maxLengthCheck(this);" maxlength="4" value="@Model.FieldPinConfirmation">
                                        <span class="error" style="display: none;">@Model.FieldValPin</span> <span class="empty" style="display: none;">@Model.FieldRequired</span>
                                    </label>
                                    <br class="clear">
                                    <div class="btns">
                                        <a href="#" class="btn more_btn1" data-type="reset">@Model.BtnClear</a>
                                        <a href="#" class="btn more_btn1" data-type="submit">@Model.BtnReg</a>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>
    <script type="text/javascript" src="/js/bootstrap.js"></script>
    <script type="text/javascript">
        setTimeout(function () {
            jQuery('#formReg').forms({ ownerEmail: '@Model.OwnerEmail' });
            jQuery('#formInvite').forms({ ownerEmail: '@Model.OwnerEmail' });
            jQuery('#formFeedback').forms({ ownerEmail: '@Model.OwnerEmail' });
        }, 2000);

        if (_userId == "") {
            $("#InviteFriends").hide();
        }
    </script>
</body>
</html>